@model Banka.Models.Payment

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Make Payment</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
    <div class="container offset-md-4">
        <form asp-action="MakePayment" method=POST action="/api/payments">
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="Amount">Amount</label>
                    <input type="text" class="form-control" id="Amount" asp-for="Amount" name="Amount">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="IbanBenef">IBAN Benefitor</label>
                    <input type="text" class="form-control" id="IbanBenef" asp-for="IbanBenef" name="IbanBenef">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="IbanOrig">IBAN Originator</label>
                    <input type="text" class="form-control" id="IbanOrig" asp-for="IbanOrig" name="IbanOrig">
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="PaymentDate">Payment Date</label>
                    <input type="text" class="form-control" id="PaymentDate" asp-for="PaymentDate" name="PaymentDate">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="Reason">Payment Reason</label>
                    <input type="text" class="form-control" id="Reason" asp-for="Reason" name="Reason">
                </div>
            </div>

<!--             <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="paymentId">Payment Id</label>
                    <input type="text" class="form-control" id="paymentId" asp-for="paymentId">
                </div>
            </div> -->
            <button type="submit" class=" offset-md-2 btn btn-primary">Create Payment</button>
        </form>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="main.js"></script> 
</body>
</html>